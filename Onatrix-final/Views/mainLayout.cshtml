@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;

    var pageTitle = !string.IsNullOrEmpty(ViewBag.Title) ? $"{ViewBag.Title} | Onatrix - Financial Solutions for Your Business" : "Onatrix - Financial Solutions for Your Business";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/29b0af88b9.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <title>@pageTitle</title>
</head>
<body>
    <div class="wrapper">
        <header>
                <div class="header-top">
                    <div class="address-info">
                        <p>Klarabergsviadukten 90, 111 64 Stockholm</p>
                    </div>
                    <div class="social-media-icon">
                        <a href="https://www.facebook.com" target="_blank"><i class="fa-brands fa-facebook"></i></a>
                        <a href="https://www.twitter.com" target="_blank"> <i class="fa-brands fa-twitter"></i></a>
                        <a href="https://www.linkedin.com" target="_blank"><i class="fa-brands fa-linkedin"></i></a>
                    </div>
                  
                </div>
                <div class="nav-menu">
                    <div class="logo">
                    <a href="/"><img src="~./Images/Symbol.svg" alt=""></a>
                        <h4>Onatrix</h4>
                    </div>
                    <nav>
                        <a href="/about">About</a>
                        <a href="/services">Services</a>
                        <a href="/projects">Projects</a>
                        <a href="/contact">Contact</a>
                    </nav>
                    <a href=""><i class="fa-solid fa-magnifying-glass"></i></a>
            </div>
    
        </header>
        <main>
      @RenderBody()
     </main>
     <footer></footer>
     </div>
    <script src="/scripts/main.js"></script>
      
    
</body>
</html>